WEEKLY_REPORT_TEMPLATE=reports.weekly.default
REPORTS_AI_ENABLED=false

VITE_APP_NAME="${APP_NAME}"

# PBXWARE_MOCK_MODE: Toggle PBX behaviour. This environment variable is the
# single source of truth for whether the application uses the mock PBX client
# or the real PBX integration. Set to `true` to force mock behaviour.
# Set to `false` to use the real PBX API and fetch
# credentials from AWS Secrets Manager (preferred) with ENV fallback.
#
# NOTE: Behaviour is controlled strictly by this env flag. There are no runtime
# blockers based on APP_ENV or host environment; using mock mode in production
# for testing is supported, and using real mode locally is allowed.
PBXWARE_MOCK_MODE=true

# PBXware credentials
#
# Production (preferred): AWS Secrets Manager
# - Secret name: pbxware/api-credentials
# - Expected JSON keys:
#   - api_key
#   - base_url
#   - server_id
#   - timeout (optional)
#
# Testing / recovery (fallback ONLY): Environment variables
# Used only if Secrets Manager is missing/unavailable or incomplete.
PBXWARE_API_KEY=
PBXWARE_BASE_URL=
PBXWARE_SERVER_ID=
PBXWARE_TIMEOUT=30

# PBXware Secrets Manager options
PBXWARE_AWS_REGION=
PBXWARE_DISABLE_SECRETS_CACHE=false
AWS_SECRETS_DEBUG=false
