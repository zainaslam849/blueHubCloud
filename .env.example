# OpenAI (Whisper)
# Set via Secrets Manager or environment variables in production
OPENAI_API_KEY=
OPENAI_WHISPER_MODEL=whisper-1
OPENAI_WHISPER_TIMEOUT=120
OPENAI_WHISPER_CONNECT_TIMEOUT=10
OPENAI_WHISPER_MAX_BYTES=26214400

# Recording lifecycle
DELETE_AUDIO_AFTER_TRANSCRIPTION=false

# Transcription usage tracking (billing-ready)
TRANSCRIPTION_CURRENCY=USD
TRANSCRIPTION_COST_PER_MINUTE_OPENAI_WHISPER=0
